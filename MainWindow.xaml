<Window x:Class="Практика.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика"
        mc:Ignorable="d"
        Title="Авторизация в системе" Height="450" Width="800" Background="AntiqueWhite">
    <Grid>
        <TextBox Width="300" Height="40" Margin="0,-100,0,0" Name="Login" FontSize="25"/>
        
        <PasswordBox Width="300" Height="40" Margin="0,100,0,0" Name="Password"/>
        <Button Content="Не зарегистрированы? зарегистрироваться" Width="300" Height="30" Margin="0,230,0,0" Background="AntiqueWhite" Click="Button_Click_1" BorderThickness="0"/>
        <Button Content="Войти" Width="100" Height="40" Margin="0,320,0,0" Background="LightPink" Click="Button_Click"/>

        <Image Source="Icons/icon1.png" Width="40" Margin="-350,100,0,0"/>
        <Image Source="Icons/icon2.png" Width="40" Margin="-350,-100,0,0"/>
        <Image Source="Icons/icon3.png" Width="40" Margin="350,100,0,0"/>


    </Grid>
</Window>
